<%= form_with(model: contact, local: true ) do |form| %>
  <div class="modal-body">
    <div id="error_explanation" style='display: none;'>

      <% contact.errors.any? %>
      <% if contact.errors.any? %>
        <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
          <ul>
            <% contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
      <% end %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.text_field :name,  class: "form-control" , placeholder: "Your Name"%>
      </div>
      <div class="form-group col-md-6">
        <%= form.text_field :mobile,  class: "form-control" , placeholder: "Your Mobile no."%>
      </div>
    </div>
    <div class="form-group">
      <%= form.text_field :email,  class: "form-control" , placeholder: "email"%> 
    </div>
    <div class="form-group">
      <%= form.text_field :subject,  class: "form-control" , placeholder: "Subject"%>
    </div>
    <div class="form-group">
      <%= form.text_area :message, rows: "5" ,class: "form-control" , placeholder: "Message"%>  
    </div>
    <div class="text-center"><%=button_to 'Send Message', new_contact_path, id: "bon"%></div>
  </div>  
<% end %>
